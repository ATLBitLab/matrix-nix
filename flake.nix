{
  description = "This flake contains the config for the server of chat.atlbitlab.com which run Matrix";

  inputs = {
    nixpkgs.url = "github:nixos/nixpkgs/nixos-24.11";
  };

  outputs = { self, nixpkgs }:
    {
      nixosConfigurations = {
        bitlab-matrix = nixpkgs.lib.nixosSystem {
          system = "x86_64-linux";
          modules = [
            ./configuration.nix
          ];
        };
      };
    };
}
